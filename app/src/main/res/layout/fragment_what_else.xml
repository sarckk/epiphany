<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/create_reflection_toolbar"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginBottom = "10dp"
        android:id="@+id/textView4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/what_else_question"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/whatElseText"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:lines="15"
        android:maxLines="20"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="Start writing here"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_marginHorizontal="20dp"
    />
    <Button
        android:id="@+id/submitReflection"
        style="@style/CenteredOutlineBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        />
</LinearLayout>
