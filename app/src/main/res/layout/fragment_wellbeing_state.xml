<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.reflection.create.WellbeingStateFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginBottom = "10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="How would you rate your overall well-being right now?"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp" />

    <com.google.android.material.button.MaterialButton
        style="@style/CenteredOutlineBtn"
        android:id="@+id/veryGoodOption"
        android:text="Very Good" />

    <com.google.android.material.button.MaterialButton
        style="@style/CenteredOutlineBtn"
        android:id="@+id/prettyGoodOption"
        android:text="Pretty Good" />

    <com.google.android.material.button.MaterialButton
        style="@style/CenteredOutlineBtn"
        android:id="@+id/okOption"
        android:text="OK"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/prettyBadOption"
        style="@style/CenteredOutlineBtn"
        android:text="Pretty bad"
        />

    <com.google.android.material.button.MaterialButton
        style="@style/CenteredOutlineBtn"
        android:id="@+id/veryBadOption"
        android:text="Very Bad"
        />
    </LinearLayout>
</ScrollView>