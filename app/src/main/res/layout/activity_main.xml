<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/Epiphany" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/epiphanyText"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:text="@string/app_name"
        android:fontFamily="@font/GeorgiaBold"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/epiphanyText"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        >
      <TextView
          android:layout_width="wrap_content"
          android:fontFamily="@font/Georgia"
          android:layout_height="wrap_content"
          android:textSize="40sp"
          android:layout_centerHorizontal="true"
          android:id="@+id/youHaveSpent"
          android:text="You have spent"/>

        <RelativeLayout
            android:id="@+id/time"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/youHaveSpent"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="2h"
                android:textSize="80sp"
                android:fontFamily="@font/GeorgiaBold"
                android:textColor="#655685"
                android:id="@id/hours"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="10m"
                android:textSize="80sp"
                android:fontFamily="@font/GeorgiaBold"
                android:layout_toRightOf="@+id/hours"
                android:textColor="#b8afc8"
                android:id="@+id/minutes"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/Georgia"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/hours"
            android:text="on social media today"/>


        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/Georgia"
            android:layout_height="wrap_content"
            android:layout_below="@id/hours"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/youCouldHave"
            android:text="In that time, you could have: "/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/youCouldHave"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/Georgia"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_below="@id/hours"
                android:layout_marginTop="40dp"
                android:background="@drawable/round_corner"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:text="Run a treadmill at Migros FitnessPark🏋️"/>

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/Georgia"
                android:layout_below="@id/hours"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:text="Listened to Jazz at Moods🎷"/>

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/Georgia"
                android:layout_below="@id/hours"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:text="Caught a show at Schiffbau 🎭"/>

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/Georgia"
                android:layout_below="@id/hours"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:text="Hung out at the Les Halles 🍻"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>